
<%= form_with model: @project do |f| %>

<div class="flex flex-col space-y-4 justify-center">

<div>
<%= f.label :name, "Nome do projeto:" %> <br>
<%= f.text_field :name , class: 'md:w-1/3 w-full rounded-md' %>
</div>

<div>
<%= f.label :start_date, "Data inicial:" %>  <br>
<%=  f.date_field :start_date, class: 'md:w-1/3 w-full rounded-md' %>
</div>

<div>
<%= f.label :end_date, "Data final:" %>  <br>
<%= f.date_field :end_date , class: 'md:w-1/3 w-full rounded-md' %>
</div>

<div>
<%= f.submit "Cadastrar Projeto", disable_with: 'Cadastrando...', class: 'btn-blue' %>
</div>

</div>


<% end %>