
<%= form_with model: @activity do |f| %>

<div class="flex flex-col space-y-4 justify-center">


<div>
<%= f.label :name, "Selecione um projeto:" %> <br>
<%= f.collection_select(:project_id, Project.all, :id, :name) %>
</div>


<div>
<%= f.label :name_activity, "Nome da atividade:" %> <br>
<%= f.text_field :name_activity , class: 'md:w-1/3 w-full rounded-md' %>
</div>

<div>
<%= f.label :star_date, "Data inicial:" %>  <br>
<%=  f.date_field :start_date, class: 'md:w-1/3 w-full rounded-md' %>
</div>

<div>
<%= f.label :end_date, "Data final:" %>  <br>
<%= f.date_field :end_date , class: 'md:w-1/3 w-full rounded-md' %>
</div>

<div>
<%= f.label :finish, "Finalizado?" %>  <br>
Sim: <%= f.radio_button :finish, true, class: '' %>
NÃ£o: <%= f.radio_button :finish, false, class: '' %>
</div>

<div>
<%= f.submit "Cadastrar Atividade", disable_with: 'Cadastrando...', class: 'btn-blue' %>
</div>



</div>
 
<% end %>